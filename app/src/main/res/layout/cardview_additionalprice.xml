<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:background="#000000"

    android:id="@+id/cvAdditionalPrice"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="5dp"
    android:animateLayoutChanges="false"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RLTextoTituloPrecio"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Precio "
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RLTextoPrecio"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/RLTextoTituloPrecio">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/txtAdditionalPrice"
                android:text="S/"
                android:textColor="#000000"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/RLTextoPrecio">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgbtnDeletePriceAdditional"
                android:background="@android:color/holo_red_dark"
                android:src="@android:drawable/ic_menu_delete" />

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>