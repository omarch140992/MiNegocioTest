<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtNombreArticuloDetalePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nombre del articulo"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtCantidadProductoDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txtSubtotalProducto"
        android:gravity="center"
        android:text="x10"
        android:textColor="#383838" />

    <TextView
        android:id="@+id/txtSubtotalProducto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center|right"
        android:text="S/1000000.00"
        android:textColor="#18307e" />

    <TextView
        android:id="@+id/txtDetalleArticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombreArticuloDetalePedido"
        android:text="Detalla del articulo vendido"
        android:visibility="gone" />
</RelativeLayout>