<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.omarchh.minegociotest.Fragment.FragmentInventario">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ContenedorBotones"
            android:gravity="center"
            android:layout_below="@+id/ContenedorBarraBusqueda"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnAgregarProducto"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:padding="6dp"
                android:text="Agregar Producto"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnReservaProducto"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@android:color/holo_blue_dark"
                android:padding="6dp"
                android:text="Productos en Reserva"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>
        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:id="@+id/ContenedorBarraBusqueda"
        >

        <EditText

            android:id="@+id/sv_Product"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Buscar Producto" />

        <ImageButton
            android:elevation="5dp"
            android:id="@+id/btnBuscarProducto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/sv_Product"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:src="@drawable/search" />
        <Button
            android:drawableRight="@drawable/barcode_scan"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/btnScanProduct"
            android:backgroundTint=" #ff830f"
            android:layout_toRightOf="@+id/btnBuscarProducto"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:text="Scan"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ContenedorBotones"
        android:gravity="center">

        <ProgressBar

            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:foregroundGravity="center"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvInventario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:padding="3dp"
            android:scrollbars="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">



        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
