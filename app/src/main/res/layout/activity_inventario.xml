<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.omarchh.minegociotest.Activitys.AddEditProduct">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#ff8d1b"
                    android:src="@drawable/gallery"
                    android:id="@+id/btnBuscarImagen"
                    android:elevation="5dp"/>

                <ImageButton
                    android:id="@+id/btnCamaraImagen"
                    android:elevation="5dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#ff8d1b"
                    android:src="@drawable/camera" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car_sale"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <EditText  android:layout_width="match_parent"
                           android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Nombre del producto"
                        android:inputType="text"
                        android:maxLines="1"
                        android:id="@+id/edtProductName"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car_sale"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <EditText
                        android:id="@+id/editKey"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Codigo del Producto"
                        android:inputType="text"
                        android:maxLines="1"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"

                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="left|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/barcode"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="200dp"
                    android:layout_height="80dp" >

                    <EditText
                        android:focusable="false"
                        android:id="@+id/edtcodeBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Codigo de Barras"
                        android:inputType="text"
                        android:maxLines="1"/>

                </android.support.design.widget.TextInputLayout>
                <Button

                    android:backgroundTint="#ff8d1b"
                    android:textStyle="bold"
                    android:id="@+id/btnScan"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Scan"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/barcode_scan"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/description"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <EditText
                        android:focusable="false"
                        android:id="@+id/edtCategoryProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Categoria del producto"
                        android:inputType="none"
                        android:maxLines="1"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/description"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <EditText
                        android:id="@+id/edtAdditionalInformation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Descripcion del producto"
                        android:inputType="text"
                        android:maxLines="1"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Cantidad"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/edtQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"

                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number|numberDecimal"
                        android:paddingRight="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Cantidad en Reserva"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/edtQuantityReserve"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number|numberDecimal"
                        android:paddingRight="5dp"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Precio Compra"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/edtPurcharsePrice"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number|numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Precio Venta" />

                    <EditText
                        android:id="@+id/edtSalesPrice"
                        android:layout_width="match_parent"
                        android:hint="0"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:inputType="number|numberDecimal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayoutRecyclerViewAdditionalPrice"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Precio de venta adicional (Opcional)" />

                    <ImageButton
                        android:id="@+id/imgbtnOpenDialogAddPrice"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="#00aeff"
                        android:src="@android:drawable/ic_menu_add" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvAdditionalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scrollbars="horizontal"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Venta por peso"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Control por peso"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:backgroundTint="#000000"
                    android:id="@+id/btnInventarioCancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                   android:padding="5dp"
                    android:src="@drawable/cancel" />

                <ImageButton
                    android:backgroundTint="#000000"

                    android:id="@+id/btnInventarioAceptar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/content_save_white" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
