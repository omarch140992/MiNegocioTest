<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="#ffffff"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtMetodoPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="metodo pago"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/txtMetodoPago"
        android:text="S/0.00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtMotivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMetodoPago"
        android:text="Motivo"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMotivo"
        android:text="Descripcion"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtFechaTransaccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtDescripcion"
        android:text="fecha"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

</RelativeLayout>