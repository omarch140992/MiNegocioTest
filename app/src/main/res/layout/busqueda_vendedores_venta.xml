<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1.5"
        android:gravity="center|left"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/imgArrowBack"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_back_simple" />

        <EditText
            android:id="@+id/edtBusquedaVendedor"
            android:layout_width="150dp"
           android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
           android:ems="10"
           android:hint="Nombre del Vendedor"
           android:inputType="text"
           android:maxLines="1"
            />

        <Button
            android:id="@+id/btnAgregarVendedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffa03b"
            android:text="AÃ±adir Vendedor"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvVendedoresParaVenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>

</LinearLayout>